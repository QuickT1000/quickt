{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Translations API",
    "description": "API for managing translations, including creation, updates, and search functionality."
  },
  "basePath": "/api/translations/v1",
  "paths": {
    "/read": {
      "get": {
        "summary": "List translations",
        "description": "Retrieves a list of translations based on search criteria",
        "parameters": [
          {
            "name": "projectName",
            "in": "query",
            "type": "string",
            "description": "Project identifier",
            "required": true
          },
          {
            "name": "key",
            "in": "query",
            "type": "string",
            "description": "Translation key (supports partial matches)"
          },
          {
            "name": "value",
            "in": "query",
            "type": "string",
            "description": "Translation value (supports partial matches)"
          },
          {
            "name": "country",
            "in": "query",
            "type": "string",
            "description": "Country code"
          },
          {
            "name": "language",
            "in": "query",
            "type": "string",
            "description": "Language code"
          },
          {
            "name": "pageIndex",
            "in": "query",
            "type": "integer",
            "description": "Page index for pagination",
            "default": 1
          },
          {
            "name": "pageSize",
            "in": "query",
            "type": "integer",
            "description": "Page size for pagination",
            "default": 10
          }
        ],
        "responses": {
          "200": {
            "description": "List of translations based on search criteria",
            "schema": {
              "type": "object",
              "properties": {
                "entries": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/Translation" }
                },
                "pagination": {
                  "type": "object",
                  "properties": {
                    "total": { "type": "integer" },
                    "pageIndex": { "type": "integer" },
                    "pageSize": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create": {
      "post": {
        "summary": "Create a new translation",
        "description": "Adds a new translation entry",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": { "$ref": "#/definitions/Translation" },
            "description": "Translation data",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Translation created successfully",
            "schema": { "$ref": "#/definitions/Translation" }
          }
        }
      }
    },
    "/update": {
      "post": {
        "summary": "Update an existing translation",
        "description": "Updates details of an existing translation",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": { "$ref": "#/definitions/Translation" },
            "description": "Updated translation data",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Translation updated successfully",
            "schema": { "$ref": "#/definitions/Translation" }
          }
        }
      }
    },
    "/destroy": {
      "post": {
        "summary": "Delete a translation",
        "description": "Deletes a specific translation by ID",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "projectName": { "type": "string", "description": "Project identifier", "required": true },
                "id": { "type": "integer", "description": "Translation ID", "required": true }
              }
            },
            "description": "Deletion parameters",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Translation deleted successfully"
          }
        }
      }
    },
    "/import": {
      "post": {
        "summary": "Bulk import translations",
        "description": "Imports a batch of translations",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "projectName": { "type": "string", "description": "Project identifier", "required": true },
                "data": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "properties": {
                      "key": { "type": "string" },
                      "value": { "type": "string" }
                    }
                  }
                }
              }
            },
            "description": "Bulk import data",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Translations imported successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "data": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/Translation" }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Translation": {
      "type": "object",
      "properties": {
        "id": { "type": "integer", "description": "Unique identifier for the translation" },
        "projectName": { "type": "string", "description": "Project identifier" },
        "key": { "type": "string", "description": "Translation key" },
        "value": { "type": "string", "description": "Translation value" },
        "country": { "type": "string", "description": "Country code" },
        "language": { "type": "string", "description": "Language code" },
        "created_at": { "type": "string", "format": "date-time", "description": "Creation timestamp" },
        "updated_at": { "type": "string", "format": "date-time", "description": "Last update timestamp" }
      }
    }
  }
}
