{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["node"], // Ensure types for Node.js are included
    "typeRoots": [
      "./node_modules/@types" // Default type definitions
    ],
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["./interfaces/*"],
      "@models/*": ["./models/*"],
      "@adapter/*": ["./adapter/*"],
      "@controller/*": ["./controller/*"],
      "@repository/*": ["./repository/*"],
      "@usecases/*": ["./usecases/*"],
      "@config/*": ["./config/*"],
      "@services/*": ["./services/*"],
      "@libraries/*": ["./libraries/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}